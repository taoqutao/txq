/* components/share/share.wxss */

.share-container {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10000;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.80);
}

.canvas {
  background-color: #fff;
}

.close {
  margin-top: 10rpx;
  width: 62rpx;
  height: 62rpx;
}

.text {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: white;
}

.btn {
  width: 220rpx;
  height: 60rpx;
  font-size: 30rpx;
  color: white;
  background-color: #EC605A;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  border-radius: 6rpx;
}
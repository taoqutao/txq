/* component/accountview/accountview.wxss */
.model{
  position: fixed;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  text-align: center;
}
.model .bg{
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.6); 
  width: 100%;
  height: 100%;
  z-index: 1;
}
.model .content{
  display: inline-block;
  vertical-align: middle;
  width: 80%;
  position: relative;
  z-index: 10;
  background: #fff;
  min-height: 100rpx;
  padding: 20rpx ;
  border-radius: 10rpx;
}
.model .content .title{
  line-height: 60rpx;
  border-bottom: 1rpx solid #eee;
} 
.model .content .body{
  margin-top: 20rpx;
  text-align: left;
  padding: 10rpx;
}
.model .content.fangqi .btn{
  margin:50rpx auto;
  
  width: 70%;
  
}
.model .content.fangqi checkbox,.model .content.fangqi radio{
  display: block;
  margin-top: 20rpx;
}
.btn{
  background: #fe5727;
  margin:20rpx 20rpx;
  color: #fff;
  font-size: 30rpx;
  padding: 5rpx 0;
}

.fc-grey{
  color: #999 !important;
}

.ml20{
  margin-left:20rpx; 
}
text{
  line-height: 40rpx;
}
.fc-red{
  color: red !important;
}

.y-center{
  display: inline-block;
  height: 100%;
  width: 1px;
  vertical-align: middle;
}

.hide{
  display: none !important;
}
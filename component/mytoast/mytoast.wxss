  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.toast_content {  
  width: 60%;  
  padding: 20rpx;  
   
  border-radius: 20rpx;  
  position: relative;
}  

/* pages/detail/detail.wxss */

Page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  background-color: #f0eff3;
}

.tip {
  position: fixed;
  top: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.tip .shape {
  position: absolute;
  top: 0;
  right: 162rpx;
  width: 0;
  height: 0;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
  border-bottom: 15rpx solid rgba(0, 0, 0, 0.4);
}

.tip .tip-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
  margin-top: 15rpx;
  color: white;
  height: 50rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
}

.tip .tip-container .close {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.item1 {
  width: 100%;
}

.header {
  width: 100%;
  height: 289rpx;
}

.header .banner-img {
  width: 100%;
  height: 100%;
}

.card {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  overflow: hidden;
  position: relative;
  background-color: white;
  font-family: PingFangSC-Regular, sans-serif;
}

.card .name {
  font-size: 50rpx;
  margin: 38rpx 0 30rpx 30rpx;
  font-family: PingFangSC-Thin;
}

.card .card-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin: 0 0 20rpx 30rpx;
}

.card .state {
  font-family: PingFangSC-Medium;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90rpx;
  height: 38rpx;
  border: 1px solid #57bd37;
  color: #57bd37;
  font-size: 20rpx;
}

.card .wx-btn {
  font-family: PingFangSC-Medium;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90rpx;
  height: 38rpx;
  border: 1px solid #999;
  color: #999;
  font-size: 20rpx;
  border-radius: 6rpx;
  margin-left: 15rpx;
}

.card .card-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 15rpx;
}

.card .date {
  color: #9e9e9e;
  font-size: 28rpx;
  margin-right: 5rpx;
}

.card .button {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 150rpx;
  right: 40rpx;
  font-size: 26rpx;
}

.card .button .card-button-icon {
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx;
}

.card .button .description {
  color: #7b7b7b;
}

.card .line {
  background-color: #e0e0e0;
  width: 730rpx;
  margin-left: 20rpx;
  height: 4rpx;
}

.card .bottom {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.card .bottom .bottom-icon {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  margin-left: 30rpx;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.card .bottom .bottom-txt {
  font-size: 35rpx;
  color: #6b6b6b;
  font-family: PingFangSC-Thin;
}

.card .bottom .bottom-description {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  margin-right: 40rpx;
  font-size: 30rpx;
  color: #6b6b6b;
  font-family: PingFangSC-Thin;
}


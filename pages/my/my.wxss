/* pages/my/my.wxss */

Page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  background-color: #F0EFF4;
}

.item1 {
  display: flex;
  width: 100%;
  height: 222rpx;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  background-color: white;
}

.item1::after{
  border: none;
}

.item1 .image {
  width: 136rpx;
  height: 136rpx;
  border-radius: 68rpx;
  border: 1px solid #BFBFBF;
  margin-left: 30rpx;
}

.item1 .name {
  font-size: 38rpx;
  font-family: PingFangSC-Regular;
  margin-left: 30rpx;
  color: #3e3e3e;
}

.wrapper {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-right: 30rpx;
}

.wrapper .address {
  font-size: 30rpx;
  color: #7e7e7e;
}

.wrapper .arrow {
  display: inline-block;
  position: relative;
  width: 30rpx;
  height: 30rpx;
}

.wrapper .arrow::after {
  display: inline-block;
  content: " ";
  height: 15rpx;
  width: 15rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #848484;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  right: 6rpx;
  margin-top: -3rpx;
}

.item2 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  height: 170rpx;
  width: 100%;
  margin-top: 1px;
  background-color: white;
}

.item2 .block {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.item2 .block .t1 {
  font-family: PingFangSC-Medium;
  font-size: 45rpx;
}

.item2 .block .t2 {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
}
.item3 {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  background-color: white;
  width: 100%;
  height: 90rpx;
  margin-bottom: 4rpx;
  padding: 0 0 0 0;
  border-radius: 0;
}

.item3::after {
  border:none;
}

.item3 .icon {
  margin-left: 30rpx;
  width: 45rpx;
  height: 45rpx;
}

.item3 .title {
  font-size: 30rpx;
  margin-left: 30rpx;
}

.space {
  margin-top: 20rpx;
}
/* pages/record/record.wxss */

Page {
  background-color: #f0eff4;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container {
  width: 710rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}

.card {
  margin-top: 20rpx;
  height: 180rpx;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.card .image {
  width: 135rpx;
  height: 135rpx;
  border-radius: 10rpx;
  background-color: #F0EFF4;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.card .box {
  height: 120rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.t1 {
  font-size: 34rpx;
}

.wrapper {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.icon {
  width: 34rpx;
  height: 34rpx;
}

.t2 {
  font-size: 24rpx;
  color: #BFBFBF;
}

.card .button2 {
  font-family: PingFangSC-Medium;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90rpx;
  height: 45rpx;
  border: 1px solid #df7b87;
  color: #DF7B87;
  font-size: 20rpx;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.card .button {
  font-family: PingFangSC-Medium;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90rpx;
  height: 45rpx;
  border: 1px solid #57bd37;
  color: #57bd37;
  font-size: 20rpx;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}
